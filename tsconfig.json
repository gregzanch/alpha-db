{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "module": "CommonJS",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "es6",
      "esnext",
      "dom"
    ],
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "outDir": "prod"
  },
  "include": ["src/*.ts"]
}